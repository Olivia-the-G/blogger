<header>
  <h2>Dashboard</h2>
  <h3>Welcome, {{user.username}}</h3>
</header>

<div class="dash">

  {{!-- create new post --}}
  <div id="new-post">
    <form id="new-post-form">
      <h3>Create a Post:</h3>
      <label for="post-title">Title:</label>
      <input type="text" id="post-title" required>
      <br>
      <label for="post-content">Content:</label>
      <input type="text" id="post-content" required>
      <br>
      <button class="pretty-btn" id="new-post-submit" type="submit">Post</button>
    </form>
  </div>
  <div id="blog-posts">
    <h2 id="dash-posts">My Posts</h2>
  {{!-- show all posts --}}
{{#each (filterByUserId blogposts user.id) as |blogpost|}}
  <div class="blog-post">
    <div class="post-header">
      <h2><a href="/blogposts/{{blogpost.id}}">{{blogpost.post_title}}</a></h2>
      <p>{{blogpost.date_created}}</p>
    </div>
    <div class="post-content">
      <p>{{blogpost.content}}</p>
    </div>
  </div>
{{/each}}
  </div>
</div>

<script src="/js/dash.js"></script>
